---
import Layout from "../layouts/Layout.astro";
import ThemeToggle from "../components/ThemeToggle.tsx";
import { Button } from "../components/atoms/Button";
import { Input } from "../components/atoms/Input";
import { Card } from "../components/atoms/Card";
import { Tooltip } from "../components/atoms/Tooltip";
---

<Layout>
    <div class="min-h-screen bg-primary text-fg-main">
        <!-- Header -->
        <header
            class="sticky top-0 z-50 border-b border-ui-border bg-secondary/80 backdrop-blur-sm"
        >
            <div class="container mx-auto px-6 py-4 space-y-4">
                <h1 class="text-2xl font-bold">Design System</h1>
                <ThemeToggle client:load />
            </div>
        </header>

        <main class="container mx-auto px-6 py-12 max-w-7xl">
            <!-- Introduction -->
            <section class="mb-16">
                <h2 class="text-4xl font-bold mb-4">
                    Design System Documentation
                </h2>
                <p class="text-lg text-fg-muted max-w-3xl">
                    This page serves as a comprehensive reference for the
                    application's design system, including typography, colors,
                    themes, and design tokens. Use the theme toggle above to see
                    how the design system adapts across different color schemes.
                </p>
            </section>

            <!-- Typography Section -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold mb-8 pb-4 border-b border-ui-border"
                >
                    Typography
                </h2>

                <!-- Font Families -->
                <div class="mb-12">
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Font Families
                    </h3>
                    <div class="grid md:grid-cols-2 gap-6">
                        <div
                            class="p-6 rounded-lg bg-secondary border border-ui-border"
                        >
                            <div class="text-sm text-fg-muted mb-2">
                                Sans Serif
                            </div>
                            <div
                                class="text-2xl font-sans"
                                style="font-family: var(--font-sans);"
                            >
                                Google Sans
                            </div>
                            <div class="text-sm text-fg-muted mt-2">
                                Used for body text and UI elements
                            </div>
                            <code
                                class="block mt-4 text-xs font-mono text-fg-muted"
                            >
                                font-family: var(--font-sans);
                            </code>
                        </div>

                        <div
                            class="p-6 rounded-lg bg-secondary border border-ui-border"
                        >
                            <div class="text-sm text-fg-muted mb-2">
                                Monospace
                            </div>
                            <div
                                class="text-2xl font-mono"
                                style="font-family: var(--font-mono);"
                            >
                                DankMono
                            </div>
                            <div class="text-sm text-fg-muted mt-2">
                                Used for code and technical content
                            </div>
                            <code
                                class="block mt-4 text-xs font-mono text-fg-muted"
                            >
                                font-family: var(--font-mono);
                            </code>
                        </div>
                    </div>
                </div>

                <!-- Type Scale -->
                <div class="mb-12">
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Type Scale
                    </h3>
                    <div
                        class="space-y-6 p-6 rounded-lg bg-secondary border border-ui-border"
                    >
                        <div>
                            <div class="text-5xl font-bold mb-2">Heading 1</div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-5xl / font-bold
                            </div>
                        </div>
                        <div>
                            <div class="text-4xl font-bold mb-2">Heading 2</div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-4xl / font-bold
                            </div>
                        </div>
                        <div>
                            <div class="text-3xl font-bold mb-2">Heading 3</div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-3xl / font-bold
                            </div>
                        </div>
                        <div>
                            <div class="text-2xl font-semibold mb-2">
                                Heading 4
                            </div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-2xl / font-semibold
                            </div>
                        </div>
                        <div>
                            <div class="text-xl font-semibold mb-2">
                                Heading 5
                            </div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-xl / font-semibold
                            </div>
                        </div>
                        <div>
                            <div class="text-lg font-medium mb-2">
                                Heading 6
                            </div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-lg / font-medium
                            </div>
                        </div>
                        <div>
                            <div class="text-base mb-2">Body Text</div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-base (default)
                            </div>
                        </div>
                        <div>
                            <div class="text-sm mb-2">Small Text</div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-sm
                            </div>
                        </div>
                        <div>
                            <div class="text-xs mb-2">Extra Small Text</div>
                            <div class="text-sm text-fg-muted font-mono">
                                text-xs
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Font Weights -->
                <div class="mb-12">
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Font Weights
                    </h3>
                    <div class="grid md:grid-cols-4 gap-4">
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-thin mb-2">Thin</div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-thin (100)
                            </div>
                        </div>
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-light mb-2">Light</div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-light (300)
                            </div>
                        </div>
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-normal mb-2">Regular</div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-normal (400)
                            </div>
                        </div>
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-medium mb-2">Medium</div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-medium (500)
                            </div>
                        </div>
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-semibold mb-2">
                                Semibold
                            </div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-semibold (600)
                            </div>
                        </div>
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-bold mb-2">Bold</div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-bold (700)
                            </div>
                        </div>
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-extrabold mb-2">
                                Extrabold
                            </div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-extrabold (800)
                            </div>
                        </div>
                        <div
                            class="p-4 rounded-lg bg-secondary border border-ui-border text-center"
                        >
                            <div class="text-2xl font-black mb-2">Black</div>
                            <div class="text-xs text-fg-muted font-mono">
                                font-black (900)
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Code Typography -->
                <div>
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Code Typography
                    </h3>
                    <div
                        class="p-6 rounded-lg bg-tertiary border border-ui-border"
                    >
                        <pre
                            class="font-mono text-sm overflow-x-auto"><code><span style="color: var(--color-syntax-keyword);">const</span> <span style="color: var(--color-syntax-function);">example</span> = <span style="color: var(--color-syntax-string);">"Hello, Design System!"</span>;
<span style="color: var(--color-syntax-keyword);">const</span> <span style="color: var(--color-syntax-function);">number</span> = <span style="color: var(--color-syntax-number);">42</span>;
<span style="color: var(--color-syntax-comment);">// This is a comment</span>
<span style="color: var(--color-syntax-keyword);">function</span> <span style="color: var(--color-syntax-function);">greet</span>(<span style="color: var(--color-syntax-function);">name</span>) {'{'}
    <span style="color: var(--color-syntax-keyword);">return</span> <span style="color: var(--color-syntax-string);">"Hello, " + name + "!"</span>;
{'}'}</code></pre>
                    </div>
                </div>
            </section>

            <!-- Colors Section -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold mb-8 pb-4 border-b border-ui-border"
                >
                    Colors
                </h2>

                <!-- Primary Colors -->
                <div class="mb-12">
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Primary Colors
                    </h3>
                    <div class="grid md:grid-cols-3 gap-4">
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-24 bg-primary"></div>
                            <div class="p-4 bg-secondary">
                                <div class="font-semibold mb-1">Primary</div>
                                <div class="text-sm text-fg-muted font-mono">
                                    --color-primary
                                </div>
                                <div class="text-xs text-fg-muted mt-2">
                                    Background base color
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-24 bg-secondary"></div>
                            <div class="p-4 bg-secondary">
                                <div class="font-semibold mb-1">Secondary</div>
                                <div class="text-sm text-fg-muted font-mono">
                                    --color-secondary
                                </div>
                                <div class="text-xs text-fg-muted mt-2">
                                    Elevated surfaces
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-24 bg-tertiary"></div>
                            <div class="p-4 bg-secondary">
                                <div class="font-semibold mb-1">Tertiary</div>
                                <div class="text-sm text-fg-muted font-mono">
                                    --color-tertiary
                                </div>
                                <div class="text-xs text-fg-muted mt-2">
                                    Code blocks, deep surfaces
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Foreground Colors -->
                <div class="mb-12">
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Foreground Colors
                    </h3>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div
                                class="h-24 bg-fg-main flex items-center justify-center"
                            >
                                <span class="text-primary font-bold text-lg"
                                    >Main Text</span
                                >
                            </div>
                            <div class="p-4 bg-secondary">
                                <div class="font-semibold mb-1">Main</div>
                                <div class="text-sm text-fg-muted font-mono">
                                    --color-fg-main
                                </div>
                                <div class="text-xs text-fg-muted mt-2">
                                    Primary text color
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div
                                class="h-24 bg-fg-muted flex items-center justify-center"
                            >
                                <span class="text-primary font-bold text-lg"
                                    >Muted Text</span
                                >
                            </div>
                            <div class="p-4 bg-secondary">
                                <div class="font-semibold mb-1">Muted</div>
                                <div class="text-sm text-fg-muted font-mono">
                                    --color-fg-muted
                                </div>
                                <div class="text-xs text-fg-muted mt-2">
                                    Secondary text, labels
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Accent Color -->
                <div class="mb-12">
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Accent Color
                    </h3>
                    <div class="max-w-md">
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div
                                class="h-24 bg-accent flex items-center justify-center"
                            >
                                <span class="text-primary font-bold text-lg"
                                    >Accent</span
                                >
                            </div>
                            <div class="p-4 bg-secondary">
                                <div class="font-semibold mb-1">Accent</div>
                                <div class="text-sm text-fg-muted font-mono">
                                    --color-accent
                                </div>
                                <div class="text-xs text-fg-muted mt-2">
                                    Interactive elements, links, highlights
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Syntax Colors -->
                <div class="mb-12">
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        Syntax Colors
                    </h3>
                    <div class="grid md:grid-cols-5 gap-4">
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-syntax-keyword"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    Keyword
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-syntax-keyword
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-syntax-string"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    String
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-syntax-string
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-syntax-function"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    Function
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-syntax-function
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-syntax-number"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    Number
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-syntax-number
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-syntax-comment"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    Comment
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-syntax-comment
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- UI Colors -->
                <div>
                    <h3 class="text-xl font-semibold mb-6 text-accent">
                        UI Colors
                    </h3>
                    <div class="grid md:grid-cols-3 gap-4">
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-ui-border"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    Border
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-ui-border
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-ui-active"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    Active
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-ui-active
                                </div>
                            </div>
                        </div>
                        <div
                            class="rounded-lg overflow-hidden border border-ui-border"
                        >
                            <div class="h-20 bg-ui-gutter"></div>
                            <div class="p-3 bg-secondary">
                                <div class="font-semibold text-sm mb-1">
                                    Gutter
                                </div>
                                <div class="text-xs text-fg-muted font-mono">
                                    --color-ui-gutter
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Design Tokens Section -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold mb-8 pb-4 border-b border-ui-border"
                >
                    Design Tokens
                </h2>

                <div class="grid md:grid-cols-2 gap-6">
                    <div
                        class="p-6 rounded-lg bg-secondary border border-ui-border"
                    >
                        <h3 class="text-xl font-semibold mb-4 text-accent">
                            Available Themes
                        </h3>
                        <ul class="space-y-2 font-mono text-sm">
                            <li class="flex items-center gap-2">
                                <span class="w-3 h-3 rounded-full bg-accent"
                                ></span>
                                nordfox
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-3 h-3 rounded-full bg-accent"
                                ></span>
                                nightfox
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-3 h-3 rounded-full bg-accent"
                                ></span>
                                carbonfox
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-3 h-3 rounded-full bg-accent"
                                ></span>
                                dayfox
                            </li>
                        </ul>
                    </div>

                    <div
                        class="p-6 rounded-lg bg-secondary border border-ui-border"
                    >
                        <h3 class="text-xl font-semibold mb-4 text-accent">
                            Usage
                        </h3>
                        <p class="text-sm text-fg-muted mb-4">
                            All design tokens are CSS custom properties and can
                            be accessed via:
                        </p>
                        <pre
                            class="font-mono text-xs bg-tertiary p-4 rounded overflow-x-auto"><code><span style="color: var(--color-syntax-keyword);">background-color</span>: <span style="color: var(--color-syntax-function);">var</span>(<span style="color: var(--color-syntax-string);">--color-primary</span>);
<span style="color: var(--color-syntax-keyword);">color</span>: <span style="color: var(--color-syntax-function);">var</span>(<span style="color: var(--color-syntax-string);">--color-fg-main</span>);
<span style="color: var(--color-syntax-keyword);">border-color</span>: <span style="color: var(--color-syntax-function);">var</span>(<span style="color: var(--color-syntax-string);">--color-ui-border</span>);</code></pre>
                    </div>
                </div>
            </section>

            <!-- Component Examples Section -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold mb-8 pb-4 border-b border-ui-border"
                >
                    Component Examples
                </h2>

                <div class="space-y-8">
                    <!-- Buttons -->
                    <div>
                        <h3 class="text-xl font-semibold mb-4 text-accent">
                            Buttons
                        </h3>

                        <!-- Solid Variant -->
                        <div class="mb-8">
                            <h4 class="text-lg font-medium mb-3">Solid</h4>
                            <div
                                class="flex flex-wrap gap-4 p-6 rounded-lg bg-secondary border border-ui-border"
                            >
                                <Button
                                    client:load
                                    variant="solid"
                                    color="accent"
                                >
                                    Accent
                                </Button>
                                <Button
                                    client:load
                                    variant="solid"
                                    color="primary"
                                >
                                    Primary
                                </Button>
                                <Button
                                    client:load
                                    variant="solid"
                                    color="success"
                                >
                                    Success
                                </Button>
                                <Button
                                    client:load
                                    variant="solid"
                                    color="warning"
                                >
                                    Warning
                                </Button>
                                <Button
                                    client:load
                                    variant="solid"
                                    color="error"
                                >
                                    Error
                                </Button>
                            </div>
                        </div>

                        <!-- Subtle Variant -->
                        <div class="mb-8">
                            <h4 class="text-lg font-medium mb-3">Subtle</h4>
                            <div
                                class="flex flex-wrap gap-4 p-6 rounded-lg bg-secondary border border-ui-border"
                            >
                                <Button
                                    client:load
                                    variant="subtle"
                                    color="accent"
                                >
                                    Accent
                                </Button>
                                <Button
                                    client:load
                                    variant="subtle"
                                    color="success"
                                >
                                    Success
                                </Button>
                                <Button
                                    client:load
                                    variant="subtle"
                                    color="warning"
                                >
                                    Warning
                                </Button>
                                <Button
                                    client:load
                                    variant="subtle"
                                    color="error"
                                >
                                    Error
                                </Button>
                            </div>
                        </div>

                        <!-- Outline Variant -->
                        <div class="mb-8">
                            <h4 class="text-lg font-medium mb-3">Outline</h4>
                            <div
                                class="flex flex-wrap gap-4 p-6 rounded-lg bg-secondary border border-ui-border"
                            >
                                <Button
                                    client:load
                                    variant="outline"
                                    color="accent"
                                >
                                    Accent
                                </Button>
                                <Button
                                    client:load
                                    variant="outline"
                                    color="success"
                                >
                                    Success
                                </Button>
                                <Button
                                    client:load
                                    variant="outline"
                                    color="warning"
                                >
                                    Warning
                                </Button>
                                <Button
                                    client:load
                                    variant="outline"
                                    color="error"
                                >
                                    Error
                                </Button>
                            </div>
                        </div>

                        <!-- Text Variant -->
                        <div class="mb-8">
                            <h4 class="text-lg font-medium mb-3">Text</h4>
                            <div
                                class="flex flex-wrap gap-4 p-6 rounded-lg bg-secondary border border-ui-border"
                            >
                                <Button
                                    client:load
                                    variant="text"
                                    color="accent"
                                >
                                    Accent
                                </Button>
                                <Button
                                    client:load
                                    variant="text"
                                    color="success"
                                >
                                    Success
                                </Button>
                                <Button
                                    client:load
                                    variant="text"
                                    color="warning"
                                >
                                    Warning
                                </Button>
                                <Button
                                    client:load
                                    variant="text"
                                    color="error"
                                >
                                    Error
                                </Button>
                            </div>
                        </div>

                        <!-- Link Variant -->
                        <div class="mb-8">
                            <h4 class="text-lg font-medium mb-3">Link</h4>
                            <div
