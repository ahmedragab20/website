---
import Layout from "../layouts/Layout.astro";
import ThemeToggle from "../components/app/ThemeToggle/ThemeToggle";
import { Button } from "../components/atoms/Button";
import {
    Card,
    CardHeader,
    CardTitle,
    CardContent,
    CardFooter,
} from "../components/atoms/Card";
import { Text } from "../components/atoms/Text";
---

<Layout>
    <div class="min-h-screen bg-primary">
        <header
            class="sticky top-0 z-50 border-b border-ui-border bg-secondary/80 backdrop-blur-sm"
        >
            <div class="container mx-auto px-6 py-4">
                <div class="space-y-4">
                    <Text as="h1" size="xl" weight="bold" class="text-accent">
                        Ahmed Ragab
                    </Text>
                    <div class="flex items-center gap-3">
                        <ThemeToggle client:idle />
                    </div>
                </div>
            </div>
        </header>

        <main class="container mx-auto px-6 py-12 max-w-6xl">
            <section class="mb-16">
                <div class="mb-8">
                    <Text
                        as="h1"
                        size="5xl"
                        weight="bold"
                        class="mb-4 text-fg-main"
                    >
                        Software Engineer
                    </Text>
                    <Text
                        as="p"
                        size="xl"
                        color="muted"
                        class="max-w-3xl leading-relaxed"
                    >
                        Building high-performance web applications and scalable
                        design systems. Passionate about clean code, modern
                        architectures, and developer experience.
                    </Text>
                </div>
            </section>

            <section class="mb-16">
                <Text
                    as="h2"
                    size="3xl"
                    weight="bold"
                    class="mb-8 pb-4 border-b border-ui-border"
                >
                    About
                </Text>
                <Card class="mb-6">
                    <CardContent class="py-6">
                        <Text as="p" size="base" color="main" class="mb-4">
                            I'm a software engineer focused on creating robust,
                            performant web applications and design systems that
                            scale. I believe in writing maintainable code,
                            following best practices, and building tools that
                            developers actually want to use.
                        </Text>
                        <Text as="p" size="base" color="muted">
                            Currently developing this website and expanding my
                            portfolio. Check back soon for updates on projects,
                            articles, and more.
                        </Text>
                    </CardContent>
                </Card>
            </section>

            <section class="mb-16">
                <Text
                    as="h2"
                    size="3xl"
                    weight="bold"
                    class="mb-8 pb-4 border-b border-ui-border"
                >
                    Connect
                </Text>
                <div class="grid md:grid-cols-3 gap-6">
                    <Card>
                        <CardHeader>
                            <CardTitle class="text-lg">Email</CardTitle>
                        </CardHeader>
                        <CardContent>
                            <Text as="p" size="sm" color="muted">
                                Let's discuss projects, opportunities, or just
                                chat about tech.
                            </Text>
                        </CardContent>
                        <CardFooter>
                            <Button
                                href="mailto:ahmedragab20901@gmail.com"
                                variant="outline"
                                color="accent"
                                size="sm"
                            >
                                Send Email
                            </Button>
                        </CardFooter>
                    </Card>

                    <Card>
                        <CardHeader>
                            <CardTitle class="text-lg">LinkedIn</CardTitle>
                        </CardHeader>
                        <CardContent>
                            <Text as="p" size="sm" color="muted">
                                Connect professionally and see my work
                                experience.
                            </Text>
                        </CardContent>
                        <CardFooter>
                            <Button
                                href="https://www.linkedin.com/in/ahmed-ragab-bb75541b3/"
                                variant="outline"
                                color="accent"
                                size="sm"
                                target="_blank"
                            >
                                View Profile
                            </Button>
                        </CardFooter>
                    </Card>

                    <Card>
                        <CardHeader>
                            <CardTitle class="text-lg">GitHub</CardTitle>
                        </CardHeader>
                        <CardContent>
                            <Text as="p" size="sm" color="muted">
                                Explore my open-source contributions and
                                projects.
                            </Text>
                        </CardContent>
                        <CardFooter>
                            <Button
                                href="https://github.com/ahmedragab20"
                                variant="outline"
                                color="accent"
                                size="sm"
                                target="_blank"
                            >
                                View Repos
                            </Button>
                        </CardFooter>
                    </Card>
                </div>
            </section>

            <section class="mb-16">
                <Text
                    as="h2"
                    size="3xl"
                    weight="bold"
                    class="mb-8 pb-4 border-b border-ui-border"
                >
                    Tech Stack
                </Text>
                <Card>
                    <CardContent class="py-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <Text
                                    as="h3"
                                    size="base"
                                    weight="semibold"
                                    class="mb-3 text-accent"
                                >
                                    Frontend
                                </Text>
                                <ul class="space-y-2">
                                    <li>
                                        <Text
                                            as="span"
                                            size="sm"
                                            color="muted"
                                            font="mono"
                                        >
                                            React, SolidJS, Astro
                                        </Text>
                                    </li>
                                    <li>
                                        <Text
                                            as="span"
                                            size="sm"
                                            color="muted"
                                            font="mono"
                                        >
                                            TypeScript, JavaScript
                                        </Text>
                                    </li>
                                    <li>
                                        <Text
                                            as="span"
                                            size="sm"
                                            color="muted"
                                            font="mono"
                                        >
                                            Tailwind CSS, Design Systems
                                        </Text>
                                    </li>
                                </ul>
                            </div>
                            <div>
                                <Text
                                    as="h3"
                                    size="base"
                                    weight="semibold"
                                    class="mb-3 text-accent"
                                >
                                    Tools & Practices
                                </Text>
                                <ul class="space-y-2">
                                    <li>
                                        <Text
                                            as="span"
                                            size="sm"
                                            color="muted"
                                            font="mono"
                                        >
                                            Git, CI/CD, Testing
                                        </Text>
                                    </li>
                                    <li>
                                        <Text
                                            as="span"
                                            size="sm"
                                            color="muted"
                                            font="mono"
                                        >
                                            Performance Optimization
                                        </Text>
                                    </li>
                                    <li>
                                        <Text
                                            as="span"
                                            size="sm"
                                            color="muted"
                                            font="mono"
                                        >
                                            Component Architecture
                                        </Text>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </CardContent>
                </Card>
            </section>
        </main>
    </div>
</Layout>
