---
import Layout from "../layouts/Layout.astro";
import { Text } from "../components/atoms/Text";
import { ChatInterface } from "../components/organisms/Chat";
import ThemesSwitch from "../components/ThemesSwitch";
---

<Layout>
    <div class="h-screen bg-primary flex flex-col overflow-hidden">
        <header
            class="sticky top-0 z-50 border-b border-ui-border bg-secondary/80 backdrop-blur-sm shrink-0"
        >
            <div class="container mx-auto px-6 py-4">
                <div class="flex items-center justify-between">
                    <Text as="h1" size="xl" weight="bold" class="text-accent">
                        Ahmed Ragab
                    </Text>
                    <div class="flex items-center gap-3">
                        <ThemesSwitch client:load placement="bottom-end" />
                    </div>
                </div>
            </div>
        </header>

        <main class="flex-1 overflow-hidden relative">
            <ChatInterface client:load />
        </main>
    </div>
</Layout>
