---
import Layout from "../layouts/Layout.astro";
import ParticleButton from "../components/ParticleButton.tsx";
import { Salad } from "@lucide/astro";
---

<Layout>
    <div
        class="container mx-auto sm:px-10 px-3 min-h-screen flex items-center overflow-hidden relative"
    >
        <Salad class="absolute top-0 left-0 w-10 h-10" />
        <div class="relative z-10 px-4 max-w-4xl font-mono">
            <h1 class="text-3xl md:text-5xl mb-6 font-extrabold">Welcome!</h1>
            <p>
                I'm
                <b class="text-orange-700 dark:text-green-600">
                    Ahmed Ragab
                </b>, A Software Engineer building high performance web
                applications and scalable design systems
            </p>

            <div>
                <p
                    class="text-sm md:text-base text-zinc-600 dark:text-zinc-400 max-w-2xl"
                >
                    <i>Currently</i> I'm developing the website in the background,
                    hopefully it'll be ready soon!
                </p>
            </div>

            <div class="mt-3">
                <p class="bg-black text-white dark:bg-white dark:text-black">
                    wanna reach out?
                </p>
                <p class="text-xs space-x-2 mt-1.5">
                    <a
                        class="text-orange-700 hover:underline dark:text-orange-600"
                        href="mailto:ahmedragab20901@gmail.com"
                        target="_blank"
                    >
                        Email me
                    </a>
                    <a
                        class="text-blue-500 hover:underline dark:text-blue-400"
                        href="https://www.linkedin.com/in/ahmed-ragab-bb75541b3/"
                        target="_blank"
                    >
                        LinkedIn
                    </a>
                    <a
                        class="text-gray-600 hover:underline dark:text-gray-300"
                        href="https://github.com/ahmedragab20"
                        target="_blank"
                    >
                        GitHub
                    </a>
                </p>
            </div>

            <div class="mt-6">
                <ParticleButton client:load />
            </div>
        </div>
    </div>
</Layout>
